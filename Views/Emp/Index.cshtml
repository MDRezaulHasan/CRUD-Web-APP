@model IEnumerable<CRUD_Web_app.Models.NewEmpClass>

@{
    ViewData["Title"] = "List";
}

<h1>Employee List</h1>

<p>
    <a asp-action="Create" class="btn btn-dark">Create New Employee</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmpId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmpId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Empname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.EmpId  },new { @class = "btn btn-primary"}) |
                @Html.ActionLink("Details", "Details", new {  id=item.EmpId },new { @class = "btn btn-success"}) |
                @Html.ActionLink("Delete", "Delete", new { id=item.EmpId  },new { @class = "btn btn-danger"})
            </td>
        </tr>
}
    </tbody>
</table>
